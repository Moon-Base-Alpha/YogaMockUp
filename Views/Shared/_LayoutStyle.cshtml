            <header class="bg-transparent">
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm alert-light bg-transparent border-bottom box-shadow mb-3">
                    <div class="container">

                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/images/yoga-logo-v3.png" alt="Yoga Shastra Logo" width="100" height="66"></a>

                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div id="navigation" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="CarouselEx">CarouselEx</a>
                                    </li>                                    
                                    <li class="nav-item active">
                                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="AdminFunctions" asp-action="GetAllCourses">List all courses</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                                    </li>
                                </ul>
                                <partial name="_LoginPartial" />
                            </div>
                    </div>
                </nav>
            </header>
            <div class="container ">
                <main role="main" class="pb-3 col-lg-12 col-md-12 col-sm-12 col-xs-12 align-content-center ">
                    @RenderBody()
                </main>
            </div>
        </div>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        
        <div class="lotus"><!--Block to center-->
            <img src="/images/lotus-icon.png" alt="Lotus" width="333" height="99">
        </div>


        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2022 - YogaMockUp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

