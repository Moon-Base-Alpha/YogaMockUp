    @* Navbar script for active navbar selection*@
    


    <style>
        #navigation .navbar-nav > li, #navigation .nav-item .nav-link  {
                text-transform: capitalize;
                font-size: 24px;
                color: #B23992;
                /*background-color: #fff;*/
                transition: background-color .2s, color .2s;
                }

        #navigation .navbar-nav > li :hover    {
                background-color: orange;
                color: #fff;
                }

        #navigation .navbar-nav > li  :focus     {
                background-color: orange;
                color: #fff;   
                }

        #navigation .navbar-nav li .active  {
                background-color: #B23992;
                color: #fff;
                }
    </style>

</head>
<body  style="background-color:rgba(255,165,0,0.1)">
    <div id="mandala" class="mandala" >
    @*<button onclick="topFunction()" id="myBtn" title="Back to top"><i class="fas fa-arrow-alt-circle-up"></i></button>  *@
